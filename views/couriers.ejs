<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Кур'єри - Адмін Панель</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }
        header {
            background-color: #007bff;
            color: #fff;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .brand {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .contact {
            font-size: 0.9rem;
        }
        .contact a {
            color: #fff;
            text-decoration: none;
            margin-right: 15px;
        }
        .menu {
            background-color: #f4f4f4;
            padding: 10px 20px;
            display: flex;
            gap: 20px;
        }
        .menu a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }
        .menu a:hover {
            text-decoration: underline;
        }
        .admin-dashboard {
            padding: 20px;
        }
        .dashboard-section {
            background-color: #f4f4f4;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            width: 100%;
        }
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }
        table, th, td {
            border: 1px solid #ccc;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f0f0f0;
        }
        .action-buttons a {
            text-decoration: none;
            margin-right: 10px;
        }
        .edit-btn {
            color: #4CAF50;
            font-size: 1.2rem;
        }
        .delete-btn {
            color: #F44336;
            font-size: 1.2rem;
        }
        .add-btn {
            background: none;
            border: none;
            color: #007bff;
            cursor: pointer;
            font-size: 1.2rem;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <div id="page-title" class="header-container">
            <h1 class="brand">Аквасвіт</h1>
            <div class="contact">
                <a href="tel:0445001212">(044) 500-12-12</a>
                <span>Графік роботи: Пн-Пт 9:00-18:00</span>
            </div>
        </div>
    </header>
    <nav class="menu">
        <a href="/admin/dashboard">Замовлення</a>
        <a href="/tables/customers">Замовники</a>
        <a href="/tables/deliveries">Доставки</a>
        <a href="/tables/couriers">Кур'єри</a>
        <a href="/statistics">Статистика</a>
        <a href="/analysis">Аналіз</a>
        <a href="/tables/warehouse-products">Склади та продукти</a>
        <a href="/tables/water-stations">Станції та проби води</a>
    </nav>

    <main class="admin-dashboard">
        <section class="dashboard-section">
            <div class="section-header">
                <h2>Список кур'єрів</h2>
                <div class="action-buttons">
                    <a href="/courierActions/add" class="add-btn">
                        <i class="fas fa-user-plus"></i> Додати кур'єра
                    </a>
                </div>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ім'я</th>
                        <th>Прізвище</th>
                        <th>Телефон</th>
                        <th>Статус</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    <% couriers.forEach(courier => { %>
                        <tr data-courier-id="<%= courier.Courier_id %>" data-courier-name="<%= courier.Name %>" data-courier-surname="<%= courier.Surname %>">
                            <td><%= courier.Courier_id %></td>
                            <td><%= courier.Name %></td>
                            <td><%= courier.Surname %></td>
                            <td><%= courier.Phone_number %></td>
                            <td><%= courier.Courier_status %></td>
                            <td class="action-buttons">
                                <a href="/courierActions/edit/<%= courier.Courier_id %>" class="edit-btn" title="Редагувати кур'єра">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="delete-btn" data-courier-id="<%= courier.Courier_id %>" 
                                        data-courier-name="<%= courier.Name %>" 
                                        data-courier-surname="<%= courier.Surname %>" 
                                        title="Видалити кур'єра">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </main>
    <footer class="bg-light py-3 mt-4">
        <div class="container text-center">
            <p>&copy; 2024 Аквасвіт. Усі права захищені.</p>
        </div>
      </footer>
      <script>
document.addEventListener('DOMContentLoaded', function () {
    const deleteButtons = document.querySelectorAll('.delete-btn');
    
    deleteButtons.forEach(button => {
        button.addEventListener('click', function () {
            // Get the data attributes from the clicked button
            const courierId = this.dataset.courierId;
            const courierName = this.dataset.courierName;
            const courierSurname = this.dataset.courierSurname;

            // Check if the data attributes exist and are not undefined
            if (!courierName || !courierSurname) {
                console.error('Courier name or surname is missing.');
                return;
            }

            // Ask for confirmation before deleting
            if (confirm(`Ви впевнені, що хочете видалити кур'єра: ${courierName} ${courierSurname}?`)) {
                // Send DELETE request via AJAX
                fetch(`/courierActions/delete/${courierId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Кур\'єр успішно видалений!');
                        // Remove the row from the table without refreshing the page
                        document.querySelector(`[data-courier-id="${courierId}"]`).remove();
                    } else {
                        alert('Помилка при видаленні кур\'єра.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Щось пішло не так.');
                });
            }
        });
    });
});

    </script>
</body>
</html>
