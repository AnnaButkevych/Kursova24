            margin-bottom: 15px;
        }
        .filter-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .filter-section label {
        font-weight: bold;
    }

    .filter-select, #search-orders {
        padding: 10px;
        font-size: 1rem;
        border-radius: 4px;
        border: 1px solid #ccc;
        margin-right: 10px;
        width: 250px;
    }

    #search-orders {
        width: 300px;
    }

    #filter-btn {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
    }

    #filter-btn:hover {
        background-color: #0056b3;
    }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }
        table, th, td {
            border: 1px solid #ccc;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f0f0f0;
        }
        .edit-btn {
            color: #4CAF50;
        }
        .delete-btn {
            color: #F44336;
        }
        .action-icons i {
        cursor: pointer;
        margin-right: 10px;
        font-size: 1.2rem;
    }

    .edit-btn {
        color: #4CAF50;
    }

    .delete-btn {
        color: #F44336;
    }

    .edit-btn:hover, .delete-btn:hover {
        opacity: 0.7;
    }

    .add-btn {
        background: none;
        border: none;
        color: #007bff;
        cursor: pointer;
        font-size: 1.2rem;
        text-decoration: none;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .filter-section {
        display: flex;
        gap: 15px;
        justify-content: space-between;
        align-items: center;
    }

    .filter-section select {
        padding: 10px;
        font-size: 1rem;
        border-radius: 4px;
        border: 1px solid #ccc;
        width: 200px;
    }
        #reset-filters-btn {
        padding: 10px 20px;
        background-color: #f44336; /* Червоний колір */
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        margin-left: 10px;
    }

    #reset-filters-btn:hover {
        background-color: #d32f2f; /* Темніший червоний при наведенні */
    }
    /* Стилі для контейнера фільтрів */
.filter-section {
    display: flex;
    flex-wrap: wrap; /* Дозволяє переносити елементи на новий рядок */
    gap: 15px;
    justify-content: flex-start; /* Вирівнюємо елементи зліва */
    align-items: center;
    margin-bottom: 20px;
}

.filter-section label {
    font-weight: bold;
}

/* Стилі для селекту */
.filter-select {
    width: 250px; /* Обмежуємо ширину */
    padding: 10px;
    font-size: 1rem;
    border-radius: 4px;
    border: 1px solid #ccc;
    background-color: #fff;
    cursor: pointer;
}

/* Стилі для групи чекбоксів */
.checkbox-group {
    display: flex;
    flex-direction: column; /* Розташовуємо чекбокси вертикально */
    gap: 10px; /* Відстань між чекбоксами */
}

.checkbox-group label {
    display: flex;
    align-items: center;
    gap: 10px; /* Відстань між текстом і чекбоксом */
    cursor: pointer;
}

.checkbox-group input[type="checkbox"] {
    width: 18px; /* Розмір чекбокса */
    height: 18px;
    cursor: pointer;
}

/* Стилі для кнопок фільтрів */
#filter-btn, #reset-filters-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
}

#filter-btn {
    background-color: #007bff;
    color: white;
}

#filter-btn:hover {
    background-color: #0056b3;
}

#reset-filters-btn {
    background-color: #f44336;
    color: white;
}

#reset-filters-btn:hover {
    background-color: #d32f2f;
}

    </style>
</head>
<body>
    <header>
        <div id="page-title" class="header-container">
            <h1 class="brand">Аквасвіт</h1>
            <div class="contact">
                <a href="tel:0445001212">(044) 500-12-12</a>
                <span>Графік роботи: Пн-Пт 9:00-18:00</span>
            </div>
        </div>
    </header>
    <nav class="menu">
        <a href="/admin/dashboard">Замовлення</a>
        <a href="/tables/customers">Замовники</a>
        <a href="/tables/deliveries">Доставки</a>
        <a href="/tables/couriers">Кур'єри</a>
        <a href="/statistics">Статистика</a>
        <a href="/analysis">Аналіз</a>
        <a href="/tables/warehouse-products">Склади та продукти</a>
        <a href="/tables/water-stations">Станції та проби води</a>
    </nav>
    <main class="admin-dashboard">
        <div class="filter-section">
            <label for="filter-status">Сортувати за:</label>
            <select id="filter-status" class="filter-select">
                <option value="date-asc" <%= filterBy === 'date-asc' ? 'selected' : '' %>>Дата (від першої до останньої)</option>
                <option value="date-desc" <%= filterBy === 'date-desc' ? 'selected' : '' %>>Дата (від останньої до першої)</option>
                <option value="sum-asc" <%= filterBy === 'sum-asc' ? 'selected' : '' %>>Сума (від найменшої до найбільшої)</option>
                <option value="sum-desc" <%= filterBy === 'sum-desc' ? 'selected' : '' %>>Сума (від найбільшої до найменшої)</option>
            </select>

            <label>Фільтрувати за статусом:</label>
            <div class="checkbox-group">
                <label>
                    <input type="checkbox" name="orderStatus" value="очікує оплати" <%= orderStatus.includes('очікує оплати') ? 'checked' : '' %>>
                    Очікує оплати
                </label>
                <label>
                    <input type="checkbox" name="orderStatus" value="виконане" <%= orderStatus.includes('виконане') ? 'checked' : '' %>>
                    Виконане
                </label>
                <label>
                    <input type="checkbox" name="orderStatus" value="скасоване" <%= orderStatus.includes('скасоване') ? 'checked' : '' %>>
                    Скасоване
                </label>
                <label>
                    <input type="checkbox" name="orderStatus" value="Pending" <%= orderStatus.includes('Pending') ? 'checked' : '' %>>
                    Pending
                </label>
                <label>
                    <input type="checkbox" name="orderStatus" value="Completed" <%= orderStatus.includes('Completed') ? 'checked' : '' %>>
                    Completed
                </label>
            </div>
        
            <input type="text" id="search-orders" placeholder="Пошук замовлень" value="<%= searchQuery %>" />
        
            <button id="filter-btn">Застосувати</button>
            <button id="reset-filters-btn">Скинути фільтри</button>
        </div>
        

        <section class="dashboard-section">
            <div class="section-header">
                <h2>Замовлення</h2>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Дата</th>
                        <th>Статус</th>
                        <th>Сума</th>
                        <th>Клієнт</th>
                        <th>Тип оплати</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order.Orders_id %></td>
                                <td><%= new Date(order.Date).toLocaleDateString('uk-UA') %></td>
                                <td><%= order.Status %></td>
                                <td><%= order.Sum %></td>
                                <td><%= order.CustomerName %> <%= order.CustomerSurname %></td>
                                <td><%= order.PaymentType %></td>
                                <td class="action-icons">
                                    <a href="/admin/edit-order/<%= order.Orders_id %>" class="edit-btn" title="Редагувати">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                   
                                    <form action="/admin/delete-order/<%= order.Orders_id %>" method="POST" onsubmit="return confirmDelete(event, '<%= order.Orders_id %>', '<%= order.Date %>', '<%= order.Status %>', '<%= order.Sum %>')">
                                        <button type="submit" class="delete-btn" title="Видалити">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7">Немає даних про замовлення</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>

    </main>

    <script>
    document.getElementById('filter-btn').addEventListener('click', function () {
        const filterBy = document.getElementById('filter-status').value;
        const orderStatuses = Array.from(document.querySelectorAll('input[name="orderStatus"]:checked')).map(checkbox => checkbox.value);
        const searchQuery = document.getElementById('search-orders').value;

        const url = new URL(window.location.href);
        url.searchParams.set('filterBy', filterBy);
        url.searchParams.set('searchQuery', searchQuery);

        // Додаємо кожен вибраний статус як окремий параметр
        orderStatuses.forEach(status => {
            url.searchParams.append('orderStatus', status);
        });

        window.location.href = url.toString();
    });

    document.getElementById('reset-filters-btn').addEventListener('click', function () {
        document.getElementById('filter-status').value = '';
        document.querySelectorAll('input[name="orderStatus"]').forEach(checkbox => {
            checkbox.checked = false; 
        });
        document.getElementById('search-orders').value = '';

        const url = new URL(window.location.href);
        url.searchParams.delete('filterBy');
        url.searchParams.delete('orderStatus');
        url.searchParams.delete('searchQuery');

        window.location.href = url.toString();
    });
        function confirmDelete(event, orderId, orderDate, orderStatus, orderSum) {
        const confirmDelete = window.confirm(`Ви дійсно хочете видалити замовлення з ID ${orderId}?\n\nДеталі замовлення:\nДата: ${orderDate}\nСтатус: ${orderStatus}\nСума: ${orderSum}\n\nЦя дія не може бути скасована.`);

        if (!confirmDelete) {
            event.preventDefault();
        }

        return confirmDelete;
        }
    </script>
    <footer class="bg-light py-3 mt-4">
        <div class="container text-center">
            <p>&copy; 2024 Аквасвіт. Усі права захищені.</p>
        </div>
      </footer>
</body>
</html>
