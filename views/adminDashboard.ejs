            justify-content: space-between;
            align-items: center;
        }
        .brand {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .contact {
            font-size: 0.9rem;
        }
        .contact a {
            color: #fff;
            text-decoration: none;
            margin-right: 15px;
        }
        .menu {
            background-color: #f4f4f4;
            padding: 10px 20px;
            display: flex;
            gap: 20px;
        }
        .menu a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }
        .menu a:hover {
            text-decoration: underline;
        }
        .admin-dashboard {
            padding: 20px;
        }
        .dashboard-section {
            background-color: #f4f4f4;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
